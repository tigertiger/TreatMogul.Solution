@{
  Layout = "_Layout";
}

@using TreatMogul.Models

<h1>Treat Menu</h1>

@if (Model.Count == 0)
{
  <p>Today's menu has not been set. Please come back later.</p>
}

<ul>
@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.Crub}", "Details", new {id = treat.TreatId})</li>
}
</ul>
@if (User.Identity.IsAuthenticated)
{
  <div class="adminPanel">
    <hr>
    <h5>Admin Options</h5>
    <p>@Html.ActionLink("Add a treat to the menu", "Create")</p>
  </div>
}